                    }else{
                        Toast.makeText(MainActivity.this, "Nothing Found", Toast.LENGTH_SHORT).show();
                        textName.setText("");
                        editTextName.setText("");
                    }
                }
                mycursor.close();
                mydatabase.close();
                jib=false;
            }
        });







